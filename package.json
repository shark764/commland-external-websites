{
  "name": "@commland/external-websites",
  "private": true,
  "scripts": {
    "start": "webpack serve",
    "start:standalone": "webpack serve --env standalone",
    "build": "webpack --mode=production",
    "build:commland": "yarn build && cp -TRrf ./dist ../core/applications/external-websites",
    "analyze": "webpack --mode=production --env analyze",
    "lint": "eslint src --ext js,ts,tsx",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "test": "cross-env BABEL_ENV=test jest --passWithNoTests",
    "watch-tests": "cross-env BABEL_ENV=test jest --watch",
    "coverage": "cross-env BABEL_ENV=test jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && concurrently yarn:test yarn:lint"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@babel/runtime": "^7.16.3",
    "@types/react": "^17.0.37",
    "@types/webpack-env": "^1.16.3",
    "babel-eslint": "^11.0.0-beta.2",
    "babel-loader": "^8.2.3",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-config-ts-react-important-stuff": "^3.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "file-loader": "^6.2.0",
    "husky": "^4.3.5",
    "prettier": "^2.5.0",
    "pretty-quick": "^3.1.2",
    "sass": "^1.34.1",
    "sass-loader": "^12.3.0",
    "single-spa-react": "^4.6.0",
    "style-loader": "^3.3.1",
    "ts-config-single-spa": "^3.0.0",
    "typescript": "^4.5.2",
    "webpack": "^5.64.3",
    "webpack-cli": "^4.9.1",
    "webpack-config-single-spa-react": "^4.0.3",
    "webpack-config-single-spa-react-ts": "^4.0.3",
    "webpack-config-single-spa-ts": "^4.1.2",
    "webpack-dev-server": "^4.5.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "11.14.3",
    "react-router-dom": "6.0.2"
  }
}
